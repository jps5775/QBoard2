<?xml version="1.0" encoding="utf-8"?>

<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.anew.joesema.qboard.QBoardAPI.ViewRunData">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGryo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gyro:" />

        <EditText
            android:id="@+id/etGryo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/tvAccel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accel:" />

        <EditText
            android:id="@+id/etAccel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/tvConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connected: " />

        <EditText
            android:id="@+id/etConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <Button
            android:id="@+id/bConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect" />

        <Button
            android:id="@+id/bGenData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gen Data" />

    </LinearLayout>


</android.widget.RelativeLayout>
