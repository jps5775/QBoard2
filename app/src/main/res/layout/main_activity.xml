<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="net.anew.joesema.qboard.QBoardAPI.MainActivity"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome to QBoard!"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryWhite"/>

    </LinearLayout>

    <Button
        android:id="@+id/bScanDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Scan for Devices to Connect"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@color/colorAccentDpPurple" />

    <Button
        android:id="@+id/bRunCritique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/bScanDevices"
        android:text="View Run Critique"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@color/colorAccentDpPurple"/>

    <Button
        android:id="@+id/bViewRunData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/bRunCritique"
        android:text="View Run Data"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@color/colorAccentDpPurple"/>

    <Button
        android:id="@+id/bViewAggregateData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/bViewRunData"
        android:text="View Aggregate Data"
        android:textColor="@color/colorPrimaryWhite"
        android:background="@color/colorAccentDpPurple"/>


</RelativeLayout>