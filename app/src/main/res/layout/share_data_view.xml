<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <Button
        android:id="@+id/generateButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@color/colorAccentOrange"
        android:text="Generate Image"
        android:textColor="@color/colorPrimaryWhite" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="230dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:src="@mipmap/share1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="I was shredding at 40mph!"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Share with the hashtag"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shareButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="#GilsonSnowboard"
        android:textColor="@color/colorAccentLtPurple"
        android:textSize="20dp" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/generateButton"
        android:layout_marginBottom="53dp"
        android:background="@color/colorAccentOrange"
        android:text="Share"
        android:textColor="@color/colorPrimaryWhite" />
</RelativeLayout>
