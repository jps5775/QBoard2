<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="net.anew.joesema.qboard.QBoardAPI.Emergency">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Alert"
        android:textColor="@color/colorPrimaryWhite"
        android:layout_centerHorizontal="true"
        android:textSize="36dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emergency_paragraph"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="13dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter New Ski Patrol Number"
        android:textSize="11dp"
        android:textColor="@color/colorPrimaryWhite"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Your Entry"
        android:textColorHint="@color/colorPrimaryWhite"
        android:layout_marginTop="225dp"
        android:textColor="@color/colorPrimaryWhite"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText2" />

    <Button
        android:id="@+id/useLastNumber"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="14dp"
        android:background="@color/colorAccentDpPurple"
        android:text="Use Last Saved Number"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="8dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@+id/useLastNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccentDpPurple"
        android:text="Save Number"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="8dp"
        android:id="@+id/button4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="NOTE: Alert will not  work unless an emergency number is set."
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="8dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button4"
        android:layout_marginBottom="15dp"
        android:background="@color/colorAccentOrange"
        android:text="Send Alert"
        android:textColor="@color/colorPrimaryWhite"
        android:id="@+id/button5" />

</RelativeLayout>
